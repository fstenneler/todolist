    </div>
{% endblock %}

{% block header_img %}{% endblock %}


{% block body %}

    <div class="row">
        <div class="error-page">
            <h3>{{ 'http_error.description'|trans({ '%status_code%': status_code }) }}</h3>
            <a href="{{ path("homepage") }}">Retour à l'accueil</a>
        </div>
    </div>

{% endblock %}
