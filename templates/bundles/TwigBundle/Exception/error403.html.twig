{% extends 'base.html.twig' %}

{% block header_title %}
    <div class="header-title align-center">
        <h1>Erreur 403</h1>
        <h2>Accès refusé</h2>
    </div>
{% endblock %}

{% block header_img %}{% endblock %}


{% block body %}

    <div class="row">
        <div class="error-page">
            <h3>Vous n'êtes pas autorisé à afficher cette page.</h3>
            <a href="{{ path("homepage") }}">Retour à l'accueil</a>
        </div>
    </div>

{% endblock %}
